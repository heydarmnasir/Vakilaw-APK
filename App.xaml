<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Vakilaw.Converters"
             xmlns:local="clr-namespace:Vakilaw"
             x:Class="Vakilaw.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" 
                                         TrueColor="DodgerBlue" 
                                         FalseColor="LightGray"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:BoolToPlusMinusConverter x:Key="BoolToPlusMinusConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>