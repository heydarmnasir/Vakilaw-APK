<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  x:Class="Vakilaw.Views.LawyerSubmitPopup"
                  BackgroundColor="Transparent" FlowDirection="RightToLeft">

    <Grid>
        <BoxView BackgroundColor="Black" Opacity="0.7"/>
        <Border Padding="25" StrokeShape="RoundRectangle 10" StrokeThickness="5" BackgroundColor="White"
               VerticalOptions="Center" HorizontalOptions="Center"
               WidthRequest="320" HeightRequest="500">
            <VerticalStackLayout Spacing="15">

                <Label Text="⚖️ ثبت نام وکیل ⚖️" FontAttributes="Bold"
                       FontSize="20" HorizontalOptions="Center"
                       TextColor="#2C3E50"/>

                <!-- فیلد نام -->
                <Border StrokeShape="RoundRectangle 10" Padding="3" BackgroundColor="#F5F6FA">
                    <Entry Placeholder="نام و نام خانوادگی" Text="{Binding FullName}" FontFamily="Sahel"
                           PlaceholderColor="#95A5A6" TextColor="#2C3E50" FontSize="14"/>
                </Border>

                <!-- فیلد شماره موبایل -->
                <Border StrokeShape="RoundRectangle 10" Padding="3" BackgroundColor="#F5F6FA">
                    <Entry Placeholder="شماره موبایل" Keyboard="Telephone" Text="{Binding PhoneNumber}"
                           PlaceholderColor="#95A5A6" TextColor="#2C3E50" FontFamily="Sahel" FontSize="14"/>
                </Border>

                <!-- فیلد شماره پروانه وکالت -->
                <Border StrokeShape="RoundRectangle 10" Padding="3" BackgroundColor="#F5F6FA">
                    <Entry Placeholder="شماره پروانه وکالت" Keyboard="Numeric" Text="{Binding LicenseNumber}"
                           PlaceholderColor="#95A5A6" TextColor="#2C3E50" FontFamily="Sahel" FontSize="14"/>
                </Border>

                <!-- دکمه ارسال OTP -->
                <Button Text="ارسال کد تایید" TextColor="White" FontFamily="Sahel" FontSize="16" FontAttributes="Bold"
                        CornerRadius="25" Padding="15,10" BackgroundColor="#3498DB"
                        Command="{Binding SendOtpCommand}"/>

                <!-- فیلد OTP (نمایش بعد از ارسال) -->
                <Border StrokeShape="RoundRectangle 10" Padding="3" BackgroundColor="#F5F6FA" IsVisible="{Binding IsOtpSent}">
                    <Entry Placeholder="کد تایید" Keyboard="Numeric" Text="{Binding EnteredOtp}"
                           PlaceholderColor="#95A5A6" TextColor="#2C3E50" FontFamily="Sahel" FontSize="16"/>
                </Border>

                <Button Text="تایید کد" TextColor="White" FontFamily="Sahel" FontSize="16" FontAttributes="Bold"
                        CornerRadius="25" Padding="15,10" BackgroundColor="#8E44AD"
                        IsVisible="{Binding IsOtpSent}" Command="{Binding VerifyOtpCommand}"/>

            </VerticalStackLayout>
        </Border>
    </Grid>
</mopups:PopupPage>