<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  x:Class="Vakilaw.Views.Popups.LawyerDetailsPopup"
                  BackgroundColor="#80000000" FlowDirection="RightToLeft">

    <Frame CornerRadius="25"
           Padding="25"
           BackgroundColor="WhiteSmoke"
           WidthRequest="330"
           HasShadow="True"
           VerticalOptions="Center"
           HorizontalOptions="Center">

        <VerticalStackLayout Spacing="20">
            <!-- هدر -->
            <HorizontalStackLayout>
               <Label Text="⚖️ جزئیات وکیل: "
               VerticalOptions="Center"                     
               FontAttributes="Bold"
               FontSize="16"
               TextColor="#22333b"/>
                <Label x:Name="FullNameLabel" VerticalOptions="Center"
                FontAttributes="Bold"
                FontSize="16"
                TextColor="#1d3557"/>
            </HorizontalStackLayout>

            <!-- شماره تلفن -->
            <Frame BackgroundColor="#F9F9F9"
                   Padding="1"
                   CornerRadius="15"
                   HasShadow="False">
                <HorizontalStackLayout Spacing="15">
                    <Label x:Name="PhoneLabel" FontFamily="IRANSansWeb"
                   FontSize="14" Margin="150,0,-148,0" VerticalOptions="Center"
                   TextColor="Black"/>
                    <ImageButton Source="copy.png" Margin="125,0" WidthRequest="1" HeightRequest="1" Clicked="CopyPhoneNumber_Clicked"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- آدرس -->
            <Frame BackgroundColor="#FFF5E5"
                   Padding="10"
                   CornerRadius="15"
                   HasShadow="False">
                <Label x:Name="DescriptionLabel"
               FontSize="13" HeightRequest="120" MaximumHeightRequest="120"
               TextColor="Black"
               LineBreakMode="WordWrap"/>
            </Frame>

            <!-- دکمه تماس مستقیم -->
            <Button Text="📞 تماس با وکیل"
            BackgroundColor="Green"
            TextColor="White"
            CornerRadius="20"
            HeightRequest="45"
            Clicked="CallLawyer"/>

            <!-- دکمه ارسال پیامک -->
            <Button Text="✉️ ارسال پیامک" FontAttributes="Bold"
            BackgroundColor="Goldenrod"
            TextColor="White"
            CornerRadius="20"
            HeightRequest="45"
            Clicked="SendMessageToLawyer"/>

            <!-- دکمه بستن -->
            <Button Text="بستن"
            BackgroundColor="#0078D7"
            TextColor="White"
            CornerRadius="20"
            HeightRequest="45"
            Clicked="ClosePopup"/>
        </VerticalStackLayout>
    </Frame>
</mopups:PopupPage>