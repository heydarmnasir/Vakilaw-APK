<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"            
             xmlns:local="clr-namespace:Vakilaw.MarkupExtensions"
             xmlns:vm="clr-namespace:Vakilaw.ViewModels"
             xmlns:models="clr-namespace:Vakilaw.Models"
             xmlns:converters="clr-namespace:Vakilaw.Converters"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"           
             x:Class="Vakilaw.Views.DocumentsPage"
             Title="برگشت به صفحه اصلی" BackgroundColor="#F8F9FA" FlowDirection="RightToLeft">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:TabToColorConverter x:Key="TabToColorConverter" 
                                   SelectedColor="Crimson" 
                                   DefaultColor="Transparent"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*">
        <Border StrokeShape="5" HorizontalOptions="Center">
            <!-- 📌 منوی سمت راست -->
        <HorizontalStackLayout Grid.Row="0"
                     BackgroundColor="#003566"
                     Padding="10">
                <HorizontalStackLayout Margin="40,0" Spacing="60">
                    <Button Text="✍️ تنظیم قرارداد" Grid.Column="0"
                    Command="{Binding ShowContractsCommand}" 
                    BackgroundColor="{Binding SelectedTab, Converter={StaticResource TabToColorConverter}, ConverterParameter=Contract}"
                    FontSize="14" FontFamily="Sahel" FontAttributes="Bold"
                    TextColor="White"/>

                    <Button Text="📑 تنظیم لایحه" Grid.Column="1"
                            Command="{Binding ShowBillsCommand}" 
                            BackgroundColor="{Binding SelectedTab, Converter={StaticResource TabToColorConverter}, ConverterParameter=Bill}"
                            FontSize="14" FontFamily="Sahel" FontAttributes="Bold"
                            TextColor="White"/>

                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Border>
        <Border Grid.Row="1" StrokeShape="5" HorizontalOptions="Fill">
            <!-- 📌 بالای صفحه: سرچ -->
            <StackLayout Grid.Row="1"
                     Padding="5"                                    
                     HorizontalOptions="Fill"
                     VerticalOptions="Fill">
                <Entry Placeholder="🔍 جستجو..." TextColor="Black" FontFamily="IRANSansWeb"
                   HorizontalOptions="Fill"
                   Text="{Binding SearchText}"/>
            </StackLayout>
        </Border>
        <Border Grid.Row="2" BackgroundColor="GhostWhite" StrokeShape="10">
            <!-- 📌 محتوای اصلی -->
        <Grid Grid.Row="2" Padding="5" HeightRequest="590">
            <ScrollView>
            <!-- 📌 پنل تنظیم قرارداد -->
            <Grid x:Name="ContractsPanel"
             BackgroundColor="#003566"
             Padding="20"
             IsVisible="{Binding IsContractsVisible}">
            <StackLayout>
                <Label Text="قرارداد وکالت"
                FontSize="20" FontFamily="IRANSansWeb"
                FontAttributes="Bold" />
                <Editor Text="{Binding ContractContent}" HorizontalTextAlignment="Justify" VerticalTextAlignment="Justify"
                FontSize="14" FontFamily="IRANSansWeb" AutoSize="TextChanges"/>                        
            </StackLayout>
            </Grid>
            </ScrollView>
            
                    <!-- 📌 پنل تنظیم لایحه -->
                    <Grid x:Name="BillsPanel"
                         BackgroundColor="#003566"
                         Padding="20"
                         IsVisible="{Binding IsBillsVisible}">
                        <StackLayout Spacing="15">
                            <!-- عنوان بخش -->
                            <Label Text="تنظیم لایحه"
                            FontSize="20"
                            FontFamily="IRANSansWeb"
                            FontAttributes="Bold"
                            TextColor="White"/>

                            <!-- انتخاب عنوان لایحه -->
                            <Picker Title="انتخاب عنوان لایحه"
                            ItemsSource="{Binding BillTitles}" 
                            SelectedItem="{Binding SelectedBillTitle}" 
                            FontFamily="IRANSansWeb"
                            FontSize="14"/>

                            <Border StrokeShape="5">
                                <!-- متن لایحه -->
                            <Editor Text="{Binding BillContent}"
                            HorizontalTextAlignment="Justify" 
                            VerticalTextAlignment="Start"
                            FontSize="14" 
                            FontFamily="IRANSansWeb" 
                            AutoSize="TextChanges"
                            HeightRequest="400"
                            BackgroundColor="White"
                            TextColor="Black"/>
                            </Border>
                        </StackLayout>
                    </Grid>
              
                <!-- 📌 پنل دادخواست‌ها -->
                <Grid x:Name="WelcomePanel"
                  BackgroundColor="WhiteSmoke"
                  Padding="20"
                  IsVisible="{Binding IsWelcomeVisible}">
                    <StackLayout>
                        <Label Text="به اتوماسیون قراردادها و لایحه ها خوش آمدید" HorizontalTextAlignment="Center"
                        FontSize="22" FontFamily="IRANSansWeb" TextColor="#003566" VerticalOptions="End"
                        FontAttributes="Bold" />
                    </StackLayout>
                </Grid>
            </Grid>
        </Border>

        <Button Grid.Row="3" Text="{Binding PrintButtonText}" Margin="0,10" HeightRequest="10" BackgroundColor="Crimson" TextColor="White" FontAttributes="Bold" FontFamily="IRANSansWeb"
        Command="{Binding PrintContractCommand}"/>
    </Grid>
</ContentPage>